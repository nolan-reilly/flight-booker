<h1>Index</h1>

<%= form_with model: @flight do |form| %>
  <div>
    <%= form.label :departure_airport_id %>
    <%= form.select :departure_airport_id, options_from_collection_for_select(@airports, :id, :name)%>
  </div>

  <div>
    <%= form.label :arrival_airport_id %>
    <%= form.select :arrival_airport_id, options_from_collection_for_select(@airports, :id, :name) %>
  </div>

  <div>
    <% [1, 2, 3, 4].each do |num| %>
      <%= form.radio_button :num_passengers, num %>
      <%= num %>
    <% end %>
  </div>

  <div>
    <%= form.label :departure_time %>
    <%= form.datetime_select :departure_time %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
